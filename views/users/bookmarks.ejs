<% layout('layouts/boilerplate') %>
<h2 class="bookmarkpagetitle">Bookmarks</h2>

<div class="homepostcontainer">
  <%bookmarks.forEach((bookmark)=>{%>
      <div class="postcard">
          <div class="postauthor">
            <div class="postauthorimg">
              <a href="/user/<%= bookmark.post.author._id %>"><img src="<%=bookmark.post.author.avatar.thumbnail %>" alt="author thumbnail"></a>
            </div>
            <div class="postauthornamejoint">
              <a href="/user/<%= bookmark.post.author._id %>">
                <p class="authorname"><%= bookmark.post.author.username %></p>
              </a>  
              <p class="date"><%= bookmark.post.date %></p>
            </div>  
          </div>
          <a href="/post/<%= bookmark.post._id %>">
            <div class="postdetails">
    
              <div class="titledetailsjoint">
                <h3><%= bookmark.post.title %></h3>
                <p><%= bookmark.post.content.substring(0, 100)+"..." %></p>
              </div>
              <div class="postthumbnail">
                <img src="<%= bookmark.post.image.thumbnail %>"  alt="cover image of post">
              </div>
            </div>
          </a>  
          <div class="postoptions">
            <div class="postimpressions">
              <p> <%= bookmark.post.likeCount %> Like</p>
                <p><%= bookmark.post.commentCount %> Comment</p>
                <p> <%= bookmark.post.readCount %> View </p>
            </div>
            <div class="cardbkmrk">
               
            </div>
          </div>
        </div>
     
      <!-- truncate upto 100 characters -->
  <%})%>
</div>  


